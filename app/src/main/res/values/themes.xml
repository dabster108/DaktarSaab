<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaktarSaab" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <!-- Dark theme specific attributes -->
    <style name="Theme.DaktarSaab.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item> <!-- Adjusted for dark theme -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">@color/white</item> <!-- Default icon color for dark mode -->
        <item name="android:textColor">@color/white</item> <!-- Default text color for dark mode -->
    </style>
</resources>